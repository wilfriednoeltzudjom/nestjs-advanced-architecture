    "@nestjs/platform-express": "^11.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "dotenv-expand": "^12.0.3",
    "kysely": "^0.28.7",
    "mongoose": "^8.18.2",
    "nestjs-cls": "^6.0.1",
    "pg": "^8.16.3",
    "pino": "^9.10.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
