  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "pnpm run test:unit && pnpm run test:integration && pnpm run test:subsystem",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:integration": "echo 'No integration tests yet'",
    "test:subsystem": "echo 'No subsystem tests yet'",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --pool=threads --poolOptions.threads.singleThread",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "test:e2e:watch": "vitest --config ./vitest.config.e2e.ts",
    "test:ui": "vitest --ui",
    "docker:up": "docker compose -f local/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f local/docker/docker-compose.yml down",
    "db:migration:generate": "ts-node -r tsconfig-paths/register src/shared/infrastructure/scripts/kysely/generate.ts",
    "db:migration": "ts-node -r tsconfig-paths/register src/shared/infrastructure/scripts/kysely/migrate.ts"
  },
